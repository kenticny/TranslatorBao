{
  "manifest_version": 3,
  "name": "TranslatorBao",
  "description": "It's just a Translator if you want",
  "version": "2.0.0",
  "author": "kenticny",
  "icons": {
    "128": "/popup/icon-128.png"
  },
  "permissions": [
    "storage",
    "management"
  ],
  "host_permissions": [
    "https://fanyi-api.baidu.com/*"
  ],
  "background": {
    "service_worker": "/background/background.js",
    "type": "module"
  },
  "action": {
    "default_icon": "/popup/icon-128.png",
    "default_popup": "/popup/index.html"
  }
}
